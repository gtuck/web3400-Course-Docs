{% extends 'base.html.twig' %}

{% block title %}{{ pageTitle|default('Contact') }} - {{ siteName|default('Site') }}{% endblock %}

{% block page_header %}
  <h1 class="title">Contact Us</h1>
  <p class="subtitle">We'd love to hear from you</p>
{% endblock %}

{% block content %}
  {# Inline errors (base layout can also render flash messages if passed) #}
  {% if errors is defined and errors|length %}
    <div class="notification is-danger">
      <button class="delete" aria-label="Dismiss"></button>
      <p><strong>There were some problems with your submission:</strong></p>
      <ul class="mt-2">
        {% for err in errors %}
          <li>{{ err|e }}</li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}

  <form method="post" action="{{ path('contact')|default('/contact') }}" novalidate>
    <div class="field">
      <label class="label" for="name">Name</label>
      <div class="control">
        <input id="name" name="name" class="input" type="text" required
               value="{{ old.name|default('')|e }}" placeholder="Your name">
      </div>
    </div>

    <div class="field">
      <label class="label" for="email">Email</label>
      <div class="control">
        <input id="email" name="email" class="input" type="email" required
               value="{{ old.email|default('')|e }}" placeholder="you@example.com">
      </div>
    </div>

    <div class="field">
      <label class="label" for="message">Message</label>
      <div class="control">
        <textarea id="message" name="message" class="textarea" required
                  placeholder="How can we help?">{{ old.message|default('')|e }}</textarea>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button type="submit" class="button is-primary">
          <span class="icon"><i class="fas fa-paper-plane" aria-hidden="true"></i></span>
          <span>Send</span>
        </button>
      </div>
      <div class="control">
        <a class="button is-light" href="{{ path('home')|default('/') }}">Cancel</a>
      </div>
    </div>
  </form>
{% endblock %}

